<p id="notice"><%= notice %></p>
<div class="col-8 offset-2">
<h1>Search Terms</h1>
<table class="table">
  <thead>
    <tr>
      <th>Term</th>
      <th>Timespan</th>
      <th>Last check</th>
      <th>Check frequency (times per day)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @search_terms.each do |search_term| %>
      <tr>
        <td><%= search_term.term %></td>
        <td><%= search_term.timespan %></td>
        <td><%= search_term.last_check %></td>
        <td><%= search_term.check_frequency %></td>
        <td><%= link_to 'Show', search_term %></td>
        <td><%= link_to 'Edit', edit_search_term_path(search_term) %></td>
        <td><%= link_to 'Destroy', search_term, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= line_chart SearchTerm.group_by_day(:created_at).count %>
<br>

<%= link_to 'New Search Term', new_search_term_path %>
</div>